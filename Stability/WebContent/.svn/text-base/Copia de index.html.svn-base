<!-- GRÄFICA PRINCIPAL----------------------------------------------------------------------------------------------------->
<script>
function grafica() {
    var chart;
	//document.getElementById("container").style.width = "100%";
    $(document).ready(function() {
        chart = new Highcharts.Chart({
            chart: {
                renderTo: 'container',
                zoomType: 'xy',
				backgroundColor: '#f1f8ff',
				borderColor: '#000000',
				borderWidth: 1
            },
            title: {
                text: 'Number of changes and checklist evaluation'
            },
            subtitle: {
                text: '<a href="http://example.com">'+global_roURI+'</a>'
            },
            xAxis: [{
                categories: snapshotsList
            }],
            yAxis: [{ // Primary yAxis
                labels: {
                    formatter: function() {
                        return this.value +'%';
                    },
                    style: {
                        color: '#89A54E'
                    }
                },
                title: {
                    text: 'Checklist evaluation',
                    style: {
                        color: '#89A54E'
                    }
                }
            }, { // Secondary yAxis
                title: {
                    text: 'Number of changes',
                    style: {
                        color: '#4572A7'
                    }
                },
                labels: {
                    formatter: function() {
                        return this.value +' changes';
                    },
                    style: {
                        color: '#4572A7'
                    }
                },
                opposite: true
            }],
            tooltip: {
                formatter: function() {
                    return ''+
                        this.x +': '+ this.y +
                        (this.series.name == 'Number of changes' ? ' changes' : '%');
                }
            },
            legend: {
                layout: 'vertical',
                align: 'left',
                x: 100,
                verticalAlign: 'top',
                y: 50,
                floating: true,
                backgroundColor: '#FFFFFF'
            },
            series: [{
				cursor: 'pointer',
                name: 'Number of changes',
                color: '#4572A7',
                type: 'column',
                yAxis: 1,
                data: numOfChangesList,
				point: {
                    events: {
                        click: function() {
							snapshotGr();
							snapshotEvalList();
                            //alert ('Category: '+ this.category +', value: '+ this.y);
                        }
                    }
                }
    
            }, {
                name: 'Checklist evaluation',
                color: '#89A54E',
                type: 'spline',
                data: checklistValuesList
            }]
        });
    });
    
};
</script>
